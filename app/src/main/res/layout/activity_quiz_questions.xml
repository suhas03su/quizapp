<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".QuizQuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuestion"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#363A43"
            tools:text="Which country does this flag belong to?"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivImage"
            android:layout_marginTop="16dp"
            android:contentDescription="Quiz Image"
            tools:src="@drawable/ic_flag_of_germany"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="3"
                android:minHeight="50dp"
                android:progress="0"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:id="@+id/progressBar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0/3"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="15dp"
                android:id="@+id/tvProgress"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvFirstOption"
            android:gravity="center"
            android:padding="15sp"
            android:textSize="18dp"
            tools:text="Argentina"
            android:textColor="#7A8089"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSecondOption"
            android:gravity="center"
            android:padding="15sp"
            android:textSize="18dp"
            tools:text="Argentina"
            android:textColor="#7A8089"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvThirdOption"
            android:gravity="center"
            android:padding="15sp"
            android:textSize="18dp"
            tools:text="Argentina"
            android:textColor="#7A8089"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvFourthOption"
            android:gravity="center"
            android:padding="15sp"
            android:textSize="18dp"
            tools:text="Argentina"
            android:layout_margin="10dp"
            android:textColor="#7A8089"
            android:background="@drawable/default_option_border_color"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Submit"
            android:id="@+id/btnSubmit"
            android:padding="10dp"
            android:textStyle="bold"
            />

    </LinearLayout>

</ScrollView>